<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/splash">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aaFFFFFF">


    </RelativeLayout>


    <TextView
        android:id="@+id/TV_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Error"
        android:background="@color/color11"
        android:padding="@dimen/margin_10"
        android:textColor="@color/color12"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/LL_bottom_sec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="right">
        <TextView
            android:id="@+id/TV_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/colorPrimary"
            android:layout_margin="@dimen/margin_10"
            android:padding="@dimen/margin_10"
            android:gravity="center"
            android:visibility="visible"
            android:background="@drawable/rounded_corner_rectangle_bigborder"/>
        <TextView
            android:id="@+id/TV_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:textColor="@color/color_violet"
            android:layout_margin="@dimen/margin_10"
            android:padding="@dimen/margin_10"
            android:gravity="center"
            android:background="@drawable/rounded_corner_rectangle_bigborder"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10"
        android:layout_below="@id/TV_title"
        android:layout_above="@id/LL_bottom_sec">

        <TextView
            android:id="@+id/TV_errors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Some Error Message"/>
    </ScrollView>





</RelativeLayout>